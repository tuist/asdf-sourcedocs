#!/usr/bin/env bash

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=./lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

mkdir -p "$ASDF_DOWNLOAD_PATH"
mkdir -p "$ASDF_DOWNLOAD_PATH/src"

# TODO: Adapt this to proper extension and adapt extracting strategy.
release_file="$ASDF_DOWNLOAD_PATH/$TOOL_NAME-$ASDF_INSTALL_VERSION.zip"

# Download tar.gz file to the download directory
download_release "$ASDF_INSTALL_VERSION" "$release_file"

#  Extract contents of tar.gz file into the download directory
# tar -xzf "$release_file" -C "$ASDF_DOWNLOAD_PATH" --strip-components=1 || fail "Could not extract $release_file"
unzip -o "$release_file" -d "$ASDF_DOWNLOAD_PATH/src" >/dev/null || fail "Could not extract $release_file"

# Build the tool
ls "$ASDF_DOWNLOAD_PATH/src"
swift build --package-path "$ASDF_DOWNLOAD_PATH/src" -c release
cp "$ASDF_DOWNLOAD_PATH/src/.build/release/sourcedocs" "$ASDF_DOWNLOAD_PATH/sourcedocs"

# Remove the tar.gz file since we don't need to keep it
rm "$release_file"
